<div id="<%= dom_id post %>">
 <p>
    <strong style="font-size: 19px;">Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
  
  <p>
    <strong>Photo:</strong>
  </p>
  <% if post.photo.attached? %>
    <%= image_tag post.photo.variant(resize_to_limit: [400, 400]), class: "post-image" %>
  <% else %>
    No photo attached
  <% end %>
  
  
  <p>
    <strong>Views:</strong>
    <%= post.views %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>
</div>
